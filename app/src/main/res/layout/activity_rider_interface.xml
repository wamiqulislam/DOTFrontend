<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- User info at top -->
    <TextView
        android:id="@+id/text_user_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Buttons -->
    <Button
        android:id="@+id/button_register_vehicle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Register Vehicle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/text_user_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_add_parcel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Parcel"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_register_vehicle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_finish_delivery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Finish Delivery"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_add_parcel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/button_choose_parcel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose Batch to Transport"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_finish_delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/button_view_batches"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View your Batches"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_choose_parcel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
