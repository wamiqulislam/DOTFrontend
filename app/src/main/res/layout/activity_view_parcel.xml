<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Parcel ID input -->
    <EditText
        android:id="@+id/edit_parcel_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Parcel ID"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- View button -->
    <Button
        android:id="@+id/button_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_parcel_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Results display -->
    <TextView
        android:id="@+id/text_parcel_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Parcel info will appear here"
        android:padding="12dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@id/button_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
