<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etParcelId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parcel ID"
            android:inputType="number"/>

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/parcel_status_prompt"/>

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Location"/>

        <EditText
            android:id="@+id/etRiderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rider ID"
            android:inputType="number"/>

        <EditText
            android:id="@+id/etDeliveredDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Delivered Date (YYYY-MM-DD)"
            android:focusable="false"/>

        <Button
            android:id="@+id/btnChangeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Status"/>

        <Button
            android:id="@+id/btnChangeLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Location"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnChangeRider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Rider"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnChangeDeliveredDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Delivered Date"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
